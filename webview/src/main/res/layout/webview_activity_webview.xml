<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="vm"
                type="com.idisfkj.awesome.webview.vm.WebViewVM" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.idisfkj.awesome.common.navigation.CommonNavigationLayout
                android:id="@+id/navigation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:onNavigationListener="@{vm.setOnNavigationListener()}" />

        <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/navigation_layout"
                app:url="@{vm.url}"
                app:webChromeClient="@{vm.setWebChromeClient()}"
                app:webViewClient="@{vm.setWebViewClient()}" />

    </RelativeLayout>

</layout>
